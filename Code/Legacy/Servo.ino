#include <Servo.h>

Servo servo_lidar;
const int PIN_SERVO = 9;
const int ANGLE_MIN = 544;
const int ANGLE_MAX = 2400;

void setup_servo(){

    servo.attach(PIN_SERVO, ANGLE_MIN, ANGLE_MAX);
}

void move_servo(int angle){

    servo_lidar.writeMicroseconds(angle);

}